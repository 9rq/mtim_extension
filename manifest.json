{
    "manifest_version": 2,

    "name": "mtim extension",
    "description": "for mtim",
    "version": "1.1",

    "background": {
        "scripts": [ "background.js" ],
        "persistent": false
    },

    "content_scripts": [
        {
            "js": [ "punchClock_mod.js" ],
            "matches": [ "https://whm.accenture.com/mytim/secure/punchClock" ]
        },
        {
            "js": ["confirm_mod.js"],
            "matches": [ "https://whm.accenture.com/mytim/secure/punchClock/confirm"]
        }
    ],
    "page_action": {
        "browser_style": true,
        "default_title": "setting",
        "default_popup": "popup.html"
    },
    "permissions": [
    "storage", "tabs", "declarativeContent"
    ]
}
